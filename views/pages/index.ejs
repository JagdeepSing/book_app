
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../layout/header') %>
    </header>

    <section class="page-subtitle">
      <div id="results-num"><%= sqlResults.rowCount %></div>
      <h4>Saved Books</h4>
    </section>

    <main class="content">

      <!-- All books from database -->
      <ul id="books-container">
        <% sqlResults.rows.forEach(book => { %>
          <li class="book" data-id="<%= book.id %>">

            <%- include('./books/detail', { book: book, show:'none' }) %>

            <!-- View Details Button (unique to this page) -->
            <a href="/books/details/<%= book.id %>">
              <button class="big-btn">View Details</button>
            </a>
          
          </li>
        <% }); %>

      </ul>
    </main>

    <footer>
      <%- include('../layout/footer') %>
    </footer>

    <%- include('../layout/js-links') %>
  </body>
</html>
