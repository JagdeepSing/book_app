<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../../layout/header') %>
    </header>
    <main class="content">
      <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Search by Title or Author" required>
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required checked>
        </label>
        <label for="author">
          <span>Author</span>
          <input type="radio" name="search" value="author" required>
        </label>
        <button type="submit">Search</button>
      </form>
    </main>
    <footer>
      <%- include('../../layout/footer') %>
    </footer>
  </body>
</html>
