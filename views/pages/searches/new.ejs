<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../../layout/header') %>
    </header>
    <div class="page-subtitle">
      <h4>Search by Title or Author</h4>
    </div>
    <main class="content">
      <form class="search-form" action="/searches/new" method="post">
        <fieldset>
          <input class="input-user-enters-text" type="text" name="search" placeholder="Search by Title or Author" required>
          <label class="radio-label">
            <span>Title</span>
            <input type="radio" name="search" value="title" required checked />
          </label>
          <label class="radio-label">
            <span>Author</span>
            <input type="radio" name="search" value="author" required />
          </label>
          <button class="big-btn" type="submit">Search</button>
        </fieldset>
      </form>
    </main>
    <footer>
      <%- include('../../layout/footer') %>
    </footer>
    <%- include('../../layout/js-links') %>
  </body>
</html>
