<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head') %>
</head>

<body>
  <header>
    <%- include('../../layout/header') %>
  </header>
  <main>
    <!-- Details page for single book -->
    <ul id="books-container">
      <li class="book">
        <%- include('../books/detail', { book: book, show: 'deep details' }) %>
        
        <div id="detail-btns">
          <button class="update-btn" value="#<%= book.id %>">Update Details</button>

          <form action="/delete/<%= book.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">Delete</button>
          </form>
        </div>

        <!-- displayed by click of update details button -->
        <section class="form-div" id="<%=book.id%>">
          <%- include('../books/edit', {formAction: 'update', book: book }) %>
        </section>
      </li>
    </ul>
  </main>
  <footer>
    <%- include('../../layout/footer') %>
  </footer>
  <%- include('../../layout/js-links') %>
</body>

</html>
