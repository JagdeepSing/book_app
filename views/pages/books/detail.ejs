<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../../layout/header') %>
    </header>
    
    <main class="content">
      <ul id="books-container">
        <li class="book" data-id="<%= book.id %>">
          <%- include('../partials/book-contents', { book: book, show: 'deep details' }) %>
          <a href="/update/<%= book.id %>">
            <button class="big-btn">Update Details</button>
          </a>
          <a href="/delete/<%= book.id %>">
            <button class="big-btn">Delete</button>
          </a>
        </li>
      </ul>
    </main>
    <footer>
      <%- include('../../layout/footer') %>
    </footer>

    <%- include('../../layout/js-links') %>
  </body>
</html>
